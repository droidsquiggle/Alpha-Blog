<h1 align="center">Signup for ALPHA-BLOG</h1>
<%= render 'shared/errors', obj: @user %>

<!-- Creates the label for the title and a text field to enter in a title -->
<div class="row">
  <div class='col-xs-12'>
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    
     <!-- Creates a text field for username of the new user -->
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :username %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :username, class: "form-control", placeholder: "Enter User Name", autofocus: true %>
      </div>
    </div>
    
     <!-- Creates a text field for the email of the new user -->
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :email %>
      </div>
      <div class="col-sm-8">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
      </div>
    </div>
    
    <!-- Creates a text field for the password of the new user -->
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :password %>
      </div>
      <div class="col-sm-8">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
      </div>
    </div>
    
    <!-- Creates a submit button for the articles table -->
    <div class="form-group">
      <div class ="col-sm-offset-2 col-sm-10">
        <%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %>  
      </div>
    </div>
    
    <!-- end ruby for loop -->
    <% end %>

    <!-- Stylize a cancel button -->
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>
    
  </div>
</div>