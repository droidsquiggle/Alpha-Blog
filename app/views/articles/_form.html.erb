<!-- when we fail at creating a new article for what ever reason (i.e. we dont enter a title) it is redirected to display the top of the page any errors from the @article object -->
<% if @article.errors.any? %>
<h2>The following errors prevented the article from being created</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>


<!-- Creates the label for the title and a text field to enter in a title -->
<div class="row">
  <div class='col-xs-12'>
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    
     <!-- Creates a text field for title of an article to be entered -->
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :title %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of Article", autofocus: true %>
      </div>
    </div>
    
     <!-- Creates a text field for the description of the article to be entered -->
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :description %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of Article" %>
      </div>
    </div>
    
    <!-- Creates a submit button for the articles table -->
    <div class="form-group">
      <div class ="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-primary btn-lg' %>  
      </div>
    </div>
    
    <!-- end ruby for loop -->
    <% end %>

    <!-- Stylize a cancel button -->
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>
    
  </div>
</div>